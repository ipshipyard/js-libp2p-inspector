{
  "name": "@ipshipyard/libp2p-inspector-ui",
  "version": "1.0.1",
  "description": "The user interface for inspecting a libp2p node",
  "author": "info@ipshipyard.com",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipshipyard/js-libp2p-inspector/tree/main/packages/libp2p-inspector-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipshipyard/js-libp2p-inspector.git"
  },
  "bugs": {
    "url": "https://github.com/ipshipyard/js-libp2p-inspector/issues"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "dist/*",
        "dist/src/*",
        "dist/src/*/index"
      ],
      "src/*": [
        "*",
        "dist/*",
        "dist/src/*",
        "dist/src/*/index"
      ]
    }
  },
  "files": [
    "dist",
    "public",
    "src",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./index.css": {
      "import": "./dist/src/index.css"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "deps",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "deps",
                "section": "Dependencies"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "clean": "aegir clean",
    "lint": "aegir lint",
    "build": "tsc && node copy-assets.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dep-check": "aegir dep-check",
    "start:firefox": "web-ext run --source-dir . --verbose --devtools",
    "release": "aegir release"
  },
  "dependencies": {
    "@ipshipyard/libp2p-inspector-metrics": "~0.0.0",
    "@libp2p/interface": "^2.10.2",
    "@libp2p/peer-id": "^5.1.5",
    "@multiformats/multiaddr": "^12.4.0",
    "@multiformats/multiaddr-matcher": "^1.7.2",
    "multiformats": "^13.3.6",
    "react-icons": "^5.5.0",
    "uint8arrays": "^5.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "aegir": "^47.0.13",
    "fast-glob": "^3.3.3"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
